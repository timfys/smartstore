@{
    Assets.BodyAttributes.AppendCssClass("home");
    Assets.AppendTitleParts((string)ViewBag.MetaTitle);
    Assets.AppendMetaDescriptionParts((string)ViewBag.MetaDescription);
    Assets.AppendMetaKeywordsParts((string)ViewBag.MetaKeywords);
}

<div class="page home-page">
    <div class="page-body">
        <zone name="home_page_top" />
        <section class="hero">
            <div class="hero-content">
                <div class="brand">
                    <div class="brand-logo"></div>
                    <div class="brand-title">
                        Oksana Miller<br>Design Studio
                    </div>
                </div>

                <p class="description">
                    Unique handmade bags created with precision, elegance,
                    and individuality
                </p>

                <a class="btn" href="/newproducts">View Collections</a>

            </div>
        </section>
        @*@await Component.InvokeAsync("TopicBlock", new { systemName = "HomePageText", isLead = true })
        <zone name="home_page_after_intro" />

        @await Component.InvokeAsync("HomeCategories")
        <zone name="home_page_after_categories" />

        @await Component.InvokeAsync("HomeProducts")
        <zone name="home_page_after_products" />

        @await Component.InvokeAsync("HomeBestsellers")
        <zone name="home_page_after_bestsellers" />

        @await Component.InvokeAsync("HomeBrands")
        <zone name="home_page_after_manufacturers" />

        @await Component.InvokeAsync("PopularProductTags")
        <zone name="home_page_after_tags" />*@

        @* TODO: (mc) find more intelligent way of rendering RecentlyViewedProducts globally *@
        @await Component.InvokeAsync("RecentlyViewedProducts")

        <zone name="home_page_bottom" />
    </div>
</div>
<style>
    
    .hero {
        width: 100vw;
        max-width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
        margin-top: 0;

        min-height: 120vh;
        background:
            linear-gradient(
                to right,
                rgba(0,0,0,0.75) 40%,
                rgba(0,0,0,0.55) 70%,
                rgba(0,0,0,0.75) 100%
            ),
            url("images/image_179.png") left / cover no-repeat;
        background-position: left center;
        background-size: cover; 
        display: flex;
        align-items: center;
        padding: 80px;
    }

    .hero-content {
        max-width: 520px;
        color: #f2f2f2;
        margin-left: auto;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 28px;
    }

    .brand-logo {
        width: 52px;
        height: 52px;
        border: 1.5px solid #cfcfcf;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        letter-spacing: 1px;
        background: url("images/logo_big.png") left / cover no-repeat;
    }

    .brand-title {
        font-size: 34px;
        letter-spacing: 3px;
        text-transform: uppercase;
        line-height: 1.2;
    }

    .description {
        font-size: 16px;
        line-height: 1.6;
        color: #d6d6d6;
        margin-bottom: 36px;
        max-width: 420px;
    }

    .btn {
        padding: 14px 34px;
        border: 1px solid #d6d6d6;
        background: transparent;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 13px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn:hover {
        background: #fff;
        color: #000;
    }

    @@media (max-width: 900px) {
    
        .hero-content {
            margin-left: 0;
            margin-bottom: 430px;
        }
    
        .brand-title {
            font-size: 26px;
        }  
        .hero {
            padding: 60px 30px;

            min-height: 100vh;

            background-image:
                linear-gradient(
                    to bottom,
                    rgba(0,0,0,0.55) 0%,
                    rgba(0,0,0,0.65) 60%,
                    rgba(0,0,0,0.85) 100%
                ),
                url("images/image_215.png");

            background-size: cover;
            background-position: center top;
            background-repeat: no-repeat;
        }
        .brand {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 48px;
        }
    }
</style>

