<header class="header">
    <div class="header__container">

        <!-- Логотип -->
        <div class="header__logo">
            <a asp-route="HomePage">
                <div class="logo__image"></div>
            </a>
            <div class="logo__text">
                OKSANA MILLER
            </div>
        </div>

        <!-- Навигация (desktop) -->
        <nav class="header__nav">
            <a href="/aboutus" class="nav__link">About</a>
            <a href="/recentlyviewedproducts" class="nav__link">Collection</a>
            <a href="/newproducts" class="nav__link">Showcase</a>
        </nav>
        <form class="header__search" action="/search/" method="get">
            <input
                type="text"
                name="q"
                placeholder="Search products..."
                class="search__input"
                aria-label="Search"
            >
            <button type="submit" class="search__button"></button>
        </form>
        <form class="mobile-search" action="/search/" method="get">
            <input
                type="text"
                name="q"
                placeholder="Search products..."
                class="search__input"
                aria-label="Search"
            >
        </form>
        <!-- Иконки (desktop) -->
        <div class="header__icons">
            <a href="/cart" class="icon__cart"></a>
            <a href="/wishlist" class="icon__favorite"></a>
            <a href="/customer/info" class="icon__user"></a>
        </div>

        <!-- Бургер (mobile) -->
        <div class="burger" onclick="toggleMenu()">
            <span></span>
            <span></span>
            <span></span>
        </div>

    </div>

    <!-- Мобильное меню -->
    <div class="mobile-menu" id="mobileMenu">
        <a href="/aboutus" class="nav__link">About</a>
        <a href="/recentlyviewedproducts" class="nav__link">Collection</a>
        <a href="/newproducts" class="nav__link">Showcase</a>
    </div>
</header>
<script>
    function toggleMenu() {
        document.getElementById('mobileMenu').classList.toggle('active');
    }
</script>
<style>
    .header {
        width: 100%;
        height: 70px;
        background: #2E2E2E;
        display: flex;
        justify-content: center;
    }

    /* Контейнер хедера */
    .header__container {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 50px;
        box-sizing: border-box;
    }

    /* Логотип */
    .header__logo {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo__image {
        width: 50px;
        height: 49px;
        background: url('/images/ologo.png?v=2') no-repeat center;
    }

    .logo__text {
        font-family: 'Kodchasan', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: 31px;
        line-height: 40px;
        text-transform: uppercase;
        color: #F5F0E6;
    }

    /* Навигация */
    .header__nav {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        gap: 100px;
    }

    .nav__link {
        font-family: 'Kodchasan', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 21px;
        color: #FFFFFF;
        text-decoration: none;
    }

    /* Иконки */
    .header__icons {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    /* Иконка корзины */
    .icon__cart {
        width: 30px;
        height: 30px;
        background: url('/images/cart.png') no-repeat center;
        cursor: pointer;
    }

    /* Иконка избранного */
    .icon__favorite {
        width: 30px;
        height: 30px;
        background: url('/images/fav.png') no-repeat center;
        cursor: pointer;
    }

    /* Иконка пользователя */
    .icon__user {
        width: 30px;
        height: 30px;
        background: url('/images/user.png') no-repeat center;
        cursor: pointer;
    }

    /* Контейнер для изображения */
    .image-container {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .image-container img {
        width: 100%;
        height: auto;
        display: block;
    }
    /* ===== MOBILE ===== */
    .burger {
        display: none;
        flex-direction: column;
        gap: 6px;
        cursor: pointer;
    }

    .burger span {
        width: 25px;
        height: 2px;
        background: #F5F0E6;
    }

    /* Мобильное меню */
    .mobile-menu {
        display: none;
        position: absolute;
        top: 70px;
        right: 0;
        width: 100%;
        background: #2E2E2E;
        flex-direction: column;
        align-items: center;
        padding: 20px 0;
    }

    .mobile-menu a {
        color: #FFFFFF;
        text-decoration: none;
        font-size: 18px;
        padding: 15px 0;
    }

    /* ===== MEDIA ===== */
    @@media (max-width: 768px) {

    /* скрываем desktop элементы */
    .header__nav,
    .header__icons {
        display: none;
    }

    /* показываем бургер */
    .burger {
        display: flex;
    }

    /* уменьшаем отступы */
    .header__container {
        padding: 0 20px;
    }

    .logo__text {
        font-size: 20px;
    }
    }

    /* активное состояние */
    .mobile-menu.active {
        display: flex;
    }


    /* SEARCH */
    .header__search,
    .mobile-search {
        display: flex;
        align-items: center;
    }

    .search__input {
        width: 180px;
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 20px;
        font-size: 14px;
        outline: none;
    }

    .search__button {
        background: url('./images/search.svg') no-repeat center;
        background-size: 16px;
        width: 32px;
        height: 32px;
        border: none;
        cursor: pointer;
    }

    /* MOBILE */
    .mobile-search {
        padding: 15px;
    }

    .mobile-search .search__input {
        width: 100%;
    }
    /* ===== SEARCH VISIBILITY ===== */

    /* По умолчанию — desktop */
    .header__search {
        display: flex;
        margin-left: 580px; /* ← отодвигает вправо */
    }

    .mobile-search {
        display: none;
    }

    /* Mobile */
    @@media (max-width: 768px) {
    .header__search {
        display: none;
    }

    .mobile-search {
        display: block;
        padding: 15px;
    }
    }
</style>